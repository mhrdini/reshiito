{
  "name": "reshiito",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "commit": "git-cz"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/cz-commitlint": "^19.8.1",
    "@config/eslint": "workspace:*",
    "@config/prettier": "workspace:*",
    "@config/tailwind": "workspace:*",
    "@config/typescript": "workspace:*",
    "commitizen": "^4.3.1",
    "eslint": "^9.34.0",
    "inquirer": "9",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.9.2",
    "validate-branch-name": "^1.3.2"
  },
  "pnpm": {
    "overrides": {
      "react": "19.0.0",
      "react-native": "0.79.6",
      "react-native-web": "~0.20.0",
      "tailwindcss": "^3.4.17"
    }
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "validate-branch-name": {
    "pattern": "^(main){1}$|^(feat|fix|hotfix|release|chore)/.+$",
    "errorMsg": "Invalid branch name \n Ex. [master, main, develop, feature/feature-info, fix/112-fix-info, hotfix/112-hotfix-info, release/1.0.0, chores/chores-info]"
  },
  "lint-staged": {
    "**/*.{js,ts,jsx,tsx,css,html}": [
      "prettier --single-quote --write",
      "eslint --fix --config ./config/eslint/base.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "prettier": "@config/prettier"
}
